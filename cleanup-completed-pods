
def controllerName
def targetType
pipeline {
  agent {
    kubernetes {
      label 'kubectl'
      yaml """
kind: Pod
metadata:
  name: kubectl
spec:
  serviceAccount: cjoc
  serviceAccountName: cjoc
  containers:
  - name: kubectl
    image: gcr.io/cloud-builders/kubectl
    resources:
      requests:
        memory: "500Mi"
    command:
    - cat
    tty: true 
      """
    }
  }
  options { 
    skipDefaultCheckout() 
  }
  triggers {
    cron('H 6-22 * * 1-5')
  }
  stages {
    stage('Deleted Completed Pods') {
      steps {
        echo "deleting completed pods in controllers namespace"
        container('kubectl') {
          sh """
            kubectl -n cbci delete pod \$(kubectl -n controllers get pods -o jsonpath="{.items[?(@.status['containerStatuses'][*].state.terminated.reason=='Completed')].metadata.name}") || true
            kubectl -n cbci delete pod  \$(kubectl -n controllers get pods -o jsonpath="{.items[?(@.status.reason=='DeadlineExceeded')].metadata.name}") || true
          """
        }
      }
    }
  }
}
